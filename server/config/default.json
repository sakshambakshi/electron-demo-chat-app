{
  "host": "localhost",
  "port": 3030,
  "public": "../public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "JWT_SECRET",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "oauth": {
      "redirect": "/",
      "github": {
        "key": "GITHUB_CLIENT_KEY",
        "secret": "GITHUB_CLIENT_SECRET"
      }
    }
  },
  "mysql": {
    "client": "mysql2",
    "connection": {
      "host" : "127.0.0.1",
      "user" : "root",
      "password" : "",
      "database" : "entropychat_app"
  
    }
  }
}
